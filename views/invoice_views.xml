<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Invoice Views -->
    <record id="view_property_invoice_tree" model="ir.ui.view">
        <field name="name">property.invoice.tree</field>
        <field name="model">property.invoice</field>
        <field name="arch" type="xml">
            <list decoration-info="state == 'draft'" decoration-warning="state == 'posted'" decoration-success="state == 'paid'" decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="date"/>
                <field name="due_date"/>
                <field name="tenant_id"/>
                <field name="property_id"/>
                <field name="room_id"/>
                <field name="invoice_type"/>
                <field name="amount_total" widget="monetary"/>
                <field name="amount_residual" widget="monetary"/>
                <field name="state" widget="badge"/>
                <field name="payment_state" widget="badge"/>
                <field name="currency_id" invisible="1"/>
            </list>
        </field>
    </record>

    <record id="view_property_invoice_form" model="ir.ui.view">
        <field name="name">property.invoice.form</field>
        <field name="model">property.invoice</field>
        <field name="arch" type="xml">
            <form string="Property Invoice">
                <header>
                    <button name="action_post" type="object" string="Post" 
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_register_payment" type="object" string="Register Payment" 
                            class="btn-primary" invisible="state not in ['posted', 'partial']"/>
                    <button name="action_print_invoice" type="object" string="Print Invoice" 
                            class="btn-secondary" invisible="state == 'draft'"/>
                    <button name="action_send_invoice" type="object" string="Send by Email" 
                            class="btn-secondary" invisible="state == 'draft'"/>
                    <button name="action_cancel" type="object" string="Cancel" 
                            invisible="state in ['paid', 'cancelled']"/>
                    <button name="action_draft" type="object" string="Reset to Draft" 
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted,paid"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_payments" type="object" class="oe_stat_button" icon="fa-money">
                            <field name="payment_state" widget="statinfo" string="Payments"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="tenant_id" required="1"/>
                            <field name="room_id" required="1"/>
                            <field name="property_id" readonly="1"/>
                            <field name="agreement_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="due_date"/>
                            <field name="invoice_type"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    
                    <group string="Period" invisible="invoice_type not in ['rent', 'maintenance']">
                        <group>
                            <field name="period_from"/>
                        </group>
                        <group>
                            <field name="period_to"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Invoice Lines">
                            <field name="invoice_line_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="quantity"/>
                                    <field name="price_unit" widget="monetary"/>
                                    <field name="tax_ids" widget="many2many_tags"/>
                                    <field name="price_subtotal" widget="monetary"/>
                                    <field name="currency_id" invisible="1"/>
                                </list>
                            </field>
                            
                            <group class="oe_subtotal_footer oe_right">
                                <field name="amount_untaxed" widget="monetary"/>
                                <field name="amount_tax" widget="monetary"/>
                                <div class="oe_subtotal_footer_separator oe_inline">
                                    <label for="amount_total"/>
                                    <field name="amount_total" nolabel="1" widget="monetary"/>
                                </div>
                                <field name="amount_paid" widget="monetary" invisible="amount_paid == 0"/>
                                <field name="amount_residual" widget="monetary" invisible="amount_residual == 0"/>
                            </group>
                        </page>
                        
                        <page string="Payments" invisible="state == 'draft'">
                            <field name="payment_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="payment_method"/>
                                    <field name="reference"/>
                                    <field name="amount" widget="monetary"/>
                                    <field name="state" widget="badge"/>
                                    <field name="currency_id" invisible="1"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Other Info">
                            <group>
                                <group>
                                    <field name="company_id"/>
                                    <field name="collection_id" readonly="1"/>
                                </group>
                                <group>
                                    <!-- Reserved for future fields -->
                                </group>
                            </group>
                            
                            <group string="Terms and Conditions">
                                <field name="notes" nolabel="1" placeholder="Terms and conditions..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_property_invoice_search" model="ir.ui.view">
        <field name="name">property.invoice.search</field>
        <field name="model">property.invoice</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="tenant_id"/>
                <field name="property_id"/>
                <field name="room_id"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Posted" name="posted" domain="[('state', '=', 'posted')]"/>
                <filter string="Paid" name="paid" domain="[('state', '=', 'paid')]"/>
                <filter string="Overdue" name="overdue" domain="[('due_date', '&lt;', context_today()), ('state', 'in', ['posted', 'partial'])]"/>
                <separator/>
                <filter string="This Month" name="this_month" 
                        domain="[('date', '&gt;=', (context_today() - datetime.timedelta(days=30)))]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Tenant" name="group_tenant" context="{'group_by': 'tenant_id'}"/>
                    <filter string="Property" name="group_property" context="{'group_by': 'property_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'invoice_type'}"/>
                    <filter string="Month" name="group_month" context="{'group_by': 'date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Payment Views -->
    <record id="view_property_payment_tree" model="ir.ui.view">
        <field name="name">property.payment.tree</field>
        <field name="model">property.payment</field>
        <field name="arch" type="xml">
            <list decoration-info="state == 'draft'" decoration-success="state == 'posted'" decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="date"/>
                <field name="tenant_id"/>
                <field name="invoice_id"/>
                <field name="payment_method"/>
                <field name="reference"/>
                <field name="amount" widget="monetary"/>
                <field name="state" widget="badge"/>
                <field name="currency_id" invisible="1"/>
            </list>
        </field>
    </record>

    <record id="view_property_payment_form" model="ir.ui.view">
        <field name="name">property.payment.form</field>
        <field name="model">property.payment</field>
        <field name="arch" type="xml">
            <form string="Property Payment">
                <header>
                    <button name="action_post" type="object" string="Post" 
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_cancel" type="object" string="Cancel" 
                            invisible="state in ['posted', 'cancelled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="invoice_id" required="1"/>
                            <field name="tenant_id" readonly="1"/>
                            <field name="amount"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="payment_method"/>
                            <field name="reference"/>
                            <field name="collection_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Payment Wizard -->
    <record id="view_property_payment_wizard_form" model="ir.ui.view">
        <field name="name">property.payment.wizard.form</field>
        <field name="model">property.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Register Payment">
                <group>
                    <field name="invoice_id" readonly="1"/>
                    <field name="tenant_id" readonly="1"/>
                    <field name="amount"/>
                    <field name="currency_id" invisible="1"/>
                </group>
                <group>
                    <field name="date"/>
                    <field name="payment_method"/>
                    <field name="reference"/>
                </group>
                <footer>
                    <button string="Register Payment" name="action_register_payment" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_property_invoice" model="ir.actions.act_window">
        <field name="name">Property Invoices</field>
        <field name="res_model">property.invoice</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_property_invoice_tree"/>
        <field name="search_view_id" ref="view_property_invoice_search"/>
        <field name="context">{'search_default_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first property invoice!
            </p>
            <p>
                Generate invoices for rent collection, deposits, and other charges.
            </p>
        </field>
    </record>

    <record id="action_property_payment" model="ir.actions.act_window">
        <field name="name">Property Payments</field>
        <field name="res_model">property.payment</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_property_payment_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No payments registered yet!
            </p>
            <p>
                Register payments against property invoices.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_property_invoicing" name="Invoicing" parent="menu_property_management_root" sequence="60"/>
    
    <menuitem id="menu_property_invoice" name="Invoices" parent="menu_property_invoicing" 
              action="action_property_invoice" sequence="10"/>
    
    <menuitem id="menu_property_payment" name="Payments" parent="menu_property_invoicing" 
              action="action_property_payment" sequence="20"/>

</odoo>
