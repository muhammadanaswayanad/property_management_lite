<odoo>
    
    <!-- Dashboard Action -->
    <record id="action_property_dashboard" model="ir.actions.act_window">
        <field name="name">Property Dashboard</field>
        <field name="res_model">property.dashboard</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{}</field>
    </record>

    <!-- Dashboard Form View -->
    <record id="view_property_dashboard_form" model="ir.ui.view">
        <field name="name">property.dashboard.form</field>
        <field name="model">property.dashboard</field>
        <field name="arch" type="xml">
            <form string="Property Management Dashboard" create="false" edit="false" delete="false">
                <sheet>
                    <div class="container-fluid">
                        <div class="row mb-4">
                            <div class="col-12 text-center">
                                <h1>Property Management Dashboard</h1>
                            </div>
                        </div>

                        <!-- Overall Statistics -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h3 class="text-primary">Overall Statistics</h3>
                            </div>
                            <div class="col-3">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h2 class="text-info"><field name="total_properties"/></h2>
                                        <p>Total Properties</p>
                                        <button name="action_open_properties" type="object" class="btn btn-sm btn-outline-primary">View All</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h2 class="text-info"><field name="total_rooms"/></h2>
                                        <p>Total Rooms</p>
                                        <button name="action_open_rooms" type="object" class="btn btn-sm btn-outline-primary">View All</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h2 class="text-success"><field name="occupied_rooms"/></h2>
                                        <p>Occupied Rooms</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h2 class="text-warning"><field name="vacant_rooms"/></h2>
                                        <p>Vacant Rooms</p>
                                        <button name="action_open_vacant_rooms" type="object" class="btn btn-sm btn-outline-primary">View Vacant</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Occupancy and Tenants -->
                        <div class="row mb-4">
                            <div class="col-6">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h3>Occupancy Rate</h3>
                                        <h2 class="text-primary"><field name="occupancy_rate" widget="percentage"/></h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h3>Active Tenants</h3>
                                        <h2 class="text-success"><field name="total_tenants"/></h2>
                                        <button name="action_open_tenants" type="object" class="btn btn-sm btn-outline-primary">View All</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Today's Stats -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h3 class="text-primary">Today's Statistics</h3>
                            </div>
                            <div class="col-3">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h4><field name="today_collections" widget="monetary"/></h4>
                                        <p>Today's Collections</p>
                                        <small class="text-muted"><field name="today_collections_count"/> transactions</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h4><field name="today_expenses" widget="monetary"/></h4>
                                        <p>Today's Expenses</p>
                                        <small class="text-muted"><field name="today_expenses_count"/> transactions</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h4 class="text-success"><field name="today_profit" widget="monetary"/></h4>
                                        <p>Today's Profit</p>
                                        <small class="text-muted">Collections - Expenses</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h4><field name="today_vacant_rooms"/></h4>
                                        <p>Currently Vacant</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Weekly Stats -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h3 class="text-primary">This Week</h3>
                            </div>
                            <div class="col-4">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h4><field name="week_collections" widget="monetary"/></h4>
                                        <p>Week Collections</p>
                                        <small class="text-muted"><field name="week_collections_count"/> transactions</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h4><field name="week_expenses" widget="monetary"/></h4>
                                        <p>Week Expenses</p>
                                        <small class="text-muted"><field name="week_expenses_count"/> transactions</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h4 class="text-success"><field name="week_profit" widget="monetary"/></h4>
                                        <p>Week Profit</p>
                                        <small class="text-muted">Collections - Expenses</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- New Tenants This Week -->
                        <div class="row mb-4">
                            <div class="col-4">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h4><field name="week_new_tenants"/></h4>
                                        <p>New Tenants This Week</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Monthly Stats -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h3 class="text-primary">This Month</h3>
                            </div>
                            <div class="col-3">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h4><field name="month_collections" widget="monetary"/></h4>
                                        <p>Month Collections</p>
                                        <small class="text-muted"><field name="month_collections_count"/> transactions</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h4><field name="month_new_tenants"/></h4>
                                        <p>New Tenants</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h4><field name="month_expenses" widget="monetary"/></h4>
                                        <p>Month Expenses</p>
                                        <small class="text-muted"><field name="month_expenses_count"/> transactions</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h4 class="text-success"><field name="month_profit" widget="monetary"/></h4>
                                        <p>Net Income</p>
                                        <small class="text-muted">Collections - Expenses</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Recent Activities -->
                        <div class="row">
                            <div class="col-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Recent Collections</h5>
                                        <button name="action_open_collections" type="object" class="btn btn-sm btn-outline-primary">View All</button>
                                    </div>
                                    <div class="card-body">
                                        <pre style="white-space: pre-wrap;"><field name="recent_collections"/></pre>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Recent Tenants</h5>
                                        <button name="action_open_tenants" type="object" class="btn btn-sm btn-outline-primary">View All</button>
                                    </div>
                                    <div class="card-body">
                                        <pre style="white-space: pre-wrap;"><field name="recent_tenants"/></pre>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
