<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Expense List View -->
    <record id="view_property_expense_list" model="ir.ui.view">
        <field name="name">property.expense.list</field>
        <field name="model">property.expense</field>
        <field name="arch" type="xml">
            <list string="Expenses" decoration-info="state=='draft'" decoration-warning="state=='submitted'" decoration-success="state=='paid'" decoration-danger="state=='rejected'">
                <field name="date"/>
                <field name="name"/>
                <field name="expense_type"/>
                <field name="property_id"/>
                <field name="flat_id"/>
                <field name="room_id"/>
                <field name="amount" widget="monetary"/>
                <field name="payment_method"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-warning="state=='submitted'" decoration-success="state=='paid'" decoration-danger="state=='rejected'"/>
                <field name="currency_id" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Expense Form View -->
    <record id="view_property_expense_form" model="ir.ui.view">
        <field name="name">property.expense.form</field>
        <field name="model">property.expense</field>
        <field name="arch" type="xml">
            <form string="Expense">
                <header>
                    <button name="action_submit" string="Submit" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_approve" string="Approve" type="object" class="btn-primary" invisible="state != 'submitted'"/>
                    <button name="action_pay" string="Mark as Paid" type="object" class="btn-success" invisible="state != 'approved'"/>
                    <button name="action_reject" string="Reject" type="object" class="btn-secondary" invisible="state not in ['submitted', 'approved']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,paid"/>
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Expense Description"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group name="basic_info">
                            <field name="date"/>
                            <field name="expense_type"/>
                            <field name="category"/>
                            <field name="amount" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group name="location">
                            <field name="property_id"/>
                            <field name="flat_id" domain="[('property_id', '=', property_id)]"/>
                            <field name="room_id" domain="[('flat_id', '=', flat_id)]"/>
                            <field name="urgency"/>
                        </group>
                    </group>
                    
                    <group>
                        <group name="payment_info">
                            <field name="payment_method"/>
                            <field name="paid_by"/>
                            <field name="reference_number"/>
                            <field name="vendor_id"/>
                        </group>
                        <group name="approval" invisible="state == 'draft'">
                            <field name="approved_by" readonly="1"/>
                            <field name="approval_date" readonly="1"/>
                            <field name="bill_reference"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional notes about this expense..."/>
                        </page>
                        <page string="Attachments" name="attachments">
                            <group>
                                <field name="bill_image" widget="image" options="{'size': [200, 200]}"/>
                                <field name="bill_filename" invisible="1"/>
                            </group>
                            <field name="attachment_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="mimetype"/>
                                    <field name="file_size" widget="file_size"/>
                                    <field name="create_date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Expense Kanban View -->
    <record id="view_property_expense_kanban" model="ir.ui.view">
        <field name="name">property.expense.kanban</field>
        <field name="model">property.expense</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="date"/>
                <field name="amount"/>
                <field name="expense_type"/>
                <field name="state"/>
                <field name="property_id"/>
                <field name="flat_id"/>
                <field name="room_id"/>
                <field name="urgency"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="expense_type"/>
                                            <t t-if="record.urgency.raw_value == 'urgent'">
                                                <span class="badge badge-danger">Urgent</span>
                                            </t>
                                            <t t-if="record.urgency.raw_value == 'high'">
                                                <span class="badge badge-warning">High</span>
                                            </t>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <span class="badge">
                                            <t t-if="record.state.raw_value == 'draft'">
                                                <span class="badge badge-secondary">Draft</span>
                                            </t>
                                            <t t-if="record.state.raw_value == 'submitted'">
                                                <span class="badge badge-warning">Submitted</span>
                                            </t>
                                            <t t-if="record.state.raw_value == 'approved'">
                                                <span class="badge badge-info">Approved</span>
                                            </t>
                                            <t t-if="record.state.raw_value == 'paid'">
                                                <span class="badge badge-success">Paid</span>
                                            </t>
                                            <t t-if="record.state.raw_value == 'rejected'">
                                                <span class="badge badge-danger">Rejected</span>
                                            </t>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <strong>Amount: </strong>
                                            <field name="amount" widget="monetary"/>
                                        </div>
                                        <div class="col-6">
                                            <strong>Date: </strong>
                                            <field name="date"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-12">
                                            <t t-if="record.property_id.raw_value">
                                                <strong>Property: </strong><field name="property_id"/>
                                            </t>
                                            <t t-if="record.flat_id.raw_value">
                                                <br/><strong>Flat: </strong><field name="flat_id"/>
                                            </t>
                                            <t t-if="record.room_id.raw_value">
                                                <br/><strong>Room: </strong><field name="room_id"/>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Expense Search View -->
    <record id="view_property_expense_search" model="ir.ui.view">
        <field name="name">property.expense.search</field>
        <field name="model">property.expense</field>
        <field name="arch" type="xml">
            <search string="Search Expenses">
                <field name="name" string="Description"/>
                <field name="expense_type"/>
                <field name="property_id"/>
                <field name="flat_id"/>
                <field name="room_id"/>
                <field name="vendor_id"/>
                <field name="paid_by"/>
                
                <filter string="Today" name="filter_today" domain="[('date', '=', context_today())]"/>
                <filter string="This Week" name="filter_week" domain="[('date', '&gt;=', (context_today() - datetime.timedelta(days=7)))]"/>
                <filter string="This Month" name="filter_month" domain="[('date', '&gt;=', (context_today() - datetime.timedelta(days=30)))]"/>
                
                <separator/>
                <filter string="Draft" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted" name="filter_submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Approved" name="filter_approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Paid" name="filter_paid" domain="[('state', '=', 'paid')]"/>
                
                <separator/>
                <filter string="DEWA" name="filter_dewa" domain="[('expense_type', '=', 'dewa')]"/>
                <filter string="Maintenance" name="filter_maintenance" domain="[('expense_type', '=', 'maintenance')]"/>
                <filter string="Staff Payment" name="filter_staff" domain="[('expense_type', '=', 'staff_payment')]"/>
                
                <separator/>
                <filter string="Urgent" name="filter_urgent" domain="[('urgency', '=', 'urgent')]"/>
                <filter string="High Priority" name="filter_high" domain="[('urgency', '=', 'high')]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Expense Type" name="group_expense_type" context="{'group_by': 'expense_type'}"/>
                    <filter string="Property" name="group_property" context="{'group_by': 'property_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                    <filter string="Payment Method" name="group_payment_method" context="{'group_by': 'payment_method'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Expense Action -->
    <record id="action_property_expense" model="ir.actions.act_window">
        <field name="name">Expenses</field>
        <field name="res_model">property.expense</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_filter_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first expense!
            </p>
            <p>
                Track daily expenses like DEWA bills, maintenance, staff payments, and more.
                You can categorize expenses by property, flat, or room level for detailed tracking.
            </p>
        </field>
    </record>

</odoo>
